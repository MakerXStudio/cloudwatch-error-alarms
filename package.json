{
  "name": "@makerx/cloudwatch-error-alarms",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.0.0-development",
  "description": "AWS CDK lambda wrapper to send error alarms to Slack",
  "keywords": [
    "TypeScript",
    "TS",
    "Cloudwatch",
    "Slack",
    "AWS CDK",
    "AWS Lambda"
  ],
  "author": "MakerX",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MakerXStudio/cloudwatch-error-alarms/issues"
  },
  "homepage": "https://github.com/MakerXStudio/cloudwatch-error-alarms#readme",
  "types": "build/src/index.d.ts",
  "main": "build/src/index.js",
  "files": [
    "build/**/*"
  ],
  "scripts": {
    "test": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "build": "npm run clean && npm run build:lambda && tsc",
    "build:lambda": "npm run build --prefix ./src//lambda && copyfiles -u 3 \"./src/lambda/build/**/*\" ./build/lambda",
    "clean": "rimraf build",
    "semantic-release": "semantic-release",
    "lint": "eslint ./src/ --ext .ts",
    "lint:fix": "eslint ./src/ --ext .ts --fix",
    "commitlint": "commitlint --edit -o",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MakerXStudio/cloudwatch-error-alarms.git"
  },
  "engines": {
    "node": ">=16.0"
  },
  "peeprDependencies": {},
  "dependencies": {
    "aws-cdk-lib": "^2.35.0",
    "aws-sdk": "^2.1178.0",
    "constructs": "^10.1.70"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@types/aws-lambda": "^8.10.101",
    "@types/aws-sdk": "^2.7.0",
    "@types/jest": "^28.1.1",
    "@types/node": "^18.6.4",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "prettier": "^2.7.0",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.3",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
